if filereadable(expand("~/vimfiles/vimrc.local"))
  source ~/vimfiles/vimrc.local
endif
runtime! vimrc_example.vim
source $VIMRUNTIME/vimrc_example.vim
set hlsearch
set incsearch
set clipboard=unnamedplus
set encoding=utf-8
set number
set relativenumber
set tabstop=4
set shiftwidth=4
set smartindent
set nobackup
set nowritebackup
set noswapfile
set noundofile
inoremap { {}<Left>
inoremap {<CR> {<CR>}<Esc>O
inoremap {{ {
inoremap {} {}
autocmd FileType cpp nnoremap <F9> :w<bar>!g++ -std=c++20 -O2 "%:p" -o "%:p:r".exe && "%:p:r".exe<CR>
autocmd FileType cpp nnoremap <F10> :! "%:p:r".exe<CR>
autocmd FileType python nnoremap <F7> :w<bar>!python "%:p"<CR>
autocmd FileType cpp nnoremap <C-c> :s/^\(\s*\)/\1\/\/<CR>:s/^\(\s*\)\/\/\/\//\1<CR>$
augroup numbertoggle
    autocmd!
    autocmd BufEnter,FocusGained,InsertLeave * set relativenumber
    autocmd BufLeave,FocusLost,InsertEnter * set norelativenumber
augroup END
